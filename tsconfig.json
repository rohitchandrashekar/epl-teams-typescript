{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./lib",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules", "**/*.test.ts", "**/*.spec.ts"
    ]
}